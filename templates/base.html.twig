        {% block body %}{% endblock %}


        <!-- Vendor JS Files -->
        <script src="{{ asset('scripts/theme/bootstrap.bundle.min.js') }}"></script>

        <!-- Template Main JS File -->
        <script src="{{ asset('scripts/theme/theme.js') }}"></script>
    </body>
</html>
