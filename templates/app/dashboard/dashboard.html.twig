                    </div>#}
                </div>
                <!-- End Left side columns -->
            </div>

            <div class="container-fluid">
                <pre>
{#                    {{ dump(actions) }}#}
                </pre>
            </div>

            <section id="card-logbook">
                <div class="row mt-4">
                    <div class="col-12">
                        {% for logbook in logbooks %}
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="">{{ logbook.name }}</h5>
                                </div>
                                <div class="card-body">
                                    {% for theme in logbook.themes %}
                                        <div class="accordion p-2 {{ loop.first ? 'mt-4' }}" id="theme-{{ theme.id }}">
                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="moduleAndTheme">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-theme-{{ theme.id }}" aria-expanded="false" aria-controls="collapse-theme-{{ theme.id }}">
                                                        {{ theme.title }}
                                                    <span class="badge bg-primary rounded-pill ms-3">{{ theme.modules|length }}</span>
                                                    </button>
                                                </h2>

                                                <div id="collapse-theme-{{ theme.id }}" class="accordion-collapse collapse" aria-labelledby="moduleAndTheme" data-bs-parent="#theme-{{ theme.id }}">
                                                    <div class="accordion-body">
                                                        {% for module in theme.modules %}
                                                            <ul class="list-group mt-2">
                                                                <li id="module-{{ module.id }}" class="list-group-item" data-bs-mainTheme="{{ module.theme.id }}">
                                                                    {{ loop.index }} - {{ module.title }}

                                                                    <a class="btn btn-sm btn-primary float-end"
                                                                       data-bs-target="#modalCreateAction{{module.id}}"
                                                                       data-bs-toggle="modal"
                                                                    >
                                                                        <i class="bi bi-eye float-end"> {{ module.id }}</i>
                                                                    </a>

                                                                    {# Modal #}
                                                                    {{ include('modals/_create_action.html.twig', {module, 'actionId': module.actions.first ? module.actions.first.id : null}) }}
                                                                </li>
                                                            </ul>
                                                        {% endfor %}
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>


        </section>

    </main>
    <!-- End #main -->

    <!-- ======= Footer ======= -->
    {{ include('app/dashboard/_dashboardFooter.html.twig') }}
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>


{% endblock %}
