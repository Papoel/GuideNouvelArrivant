        font-weight: 600;
        background-color: var(--bg-light);
        color: var(--text-dark);
    }

    .data-table td {
        vertical-align: middle;
        color: var(--text-dark);
    }

    /* Badges */
    .badge {
        padding: 0.4em 0.8em;
        font-weight: 500;
    }

    /* Boutons */
    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
