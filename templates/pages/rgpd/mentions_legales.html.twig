{% extends 'base.html.twig' %}

{% block title %}Mentions Légales
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.legal-container {
			max-width: 900px;
			margin: 0 auto;
			padding: 2rem;
		}
		.legal-header {
			background: linear-gradient(135deg, #3d5f9e 0%, #2c384e 100%);
			color: white;
			padding: 3rem 2rem;
			border-radius: 0.75rem;
			margin-bottom: 2rem;
		}
		.legal-header h1 {
			margin: 0;
			font-size: 2rem;
		}
		.legal-section {
			background: white;
			border-radius: 0.75rem;
			padding: 1.5rem 2rem;
			margin-bottom: 1.5rem;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
		}
		.legal-section h2 {
			color: #3d5f9e;
			font-size: 1.25rem;
			margin-bottom: 1rem;
			padding-bottom: 0.5rem;
			border-bottom: 2px solid #e9ecef;
		}
		.legal-section p,
		.legal-section li {
			color: #2c384e;
			line-height: 1.7;
		}
		.info-box {
			background: #f8f9fa;
			border-left: 4px solid #3d5f9e;
			padding: 1rem 1.5rem;
			margin: 1rem 0;
			border-radius: 0 0.5rem 0.5rem 0;
		}
		.back-link {
			display: inline-flex;
			align-items: center;
			gap: 0.5rem;
			color: #3d5f9e;
			text-decoration: none;
			margin-bottom: 1rem;
		}
		.back-link:hover {
			text-decoration: underline;
		}
	</style>
{% endblock %}

