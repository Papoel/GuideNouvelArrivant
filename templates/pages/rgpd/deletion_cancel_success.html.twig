{% extends 'base.html.twig' %}

{% block title %}Demande annulée{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.result-container {
			max-width: 600px;
			margin: 4rem auto;
			padding: 2rem;
			text-align: center;
		}
		.result-card {
			background: white;
			border-radius: 0.75rem;
			padding: 3rem 2rem;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
		}
		.success-icon {
			font-size: 4rem;
			color: #28a745;
			margin-bottom: 1.5rem;
		}
		.result-card h1 {
			color: #28a745;
			margin-bottom: 1rem;
		}
		.result-card p {
			color: #6c757d;
			margin-bottom: 1.5rem;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="result-container">
		<div class="result-card">
			<div class="success-icon">
				<twig:ux:icon name="bi:check-circle-fill" />
			</div>
			<h1>Demande annulée avec succès</h1>
			<p>
				Votre demande de suppression de compte a été annulée.<br>
				Votre compte et vos données sont conservés.
			</p>
			<a href="{{ path('home_index') }}" class="btn btn-primary">
				<twig:ux:icon class="me-1" name="bi:house" />
				Retour à l'accueil
			</a>
		</div>
	</div>
{% endblock %}
